#Overall makefile
all: copyadapters benchmarks

copyadapters:
	curl -O https://s3.amazonaws.com/public.ged.msu.edu/illuminaClipping.fa
	
benchmarks: adapter_trim.sh.time adapter_trim.time quality_trim.time extract_pairs.time 
	trim_clean.timediginorm_pe.time diginorm_se.time filter-adund.time diginorm_clean.time
	trinity_split.time trinity.time khmer_part.time group.time format_annotate.time 
	nema.x.mouse.time mouse.x.nema.time nema.x.mouse.homol.time nema.x.mouse.ortho.time 
	get_mouse_info.time trinity-nematostella.renamed.fa.annot.time

adapter_trim.sh.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/adapter_trim.sh.time python /usr/local/share/khmer/sandbox/write-trimmomatic.py > trim.sh

adapter_trim.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/adapter_trim.time bash trim.sh

quality_trim.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/qualitytrim.time bash quality_trim.sh

extract_pairs.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/extract_pairs.time bash extract_pairs.sh

trim_clean.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/trim_clean.time	bash cleanup1.sh

#Apply digital normalization to the paired-end reads
diginorm_pe.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/diginorm_pe.time python ${KHMER}/scripts/normalize-by-median.py -p -k 20 -C 20 -N 4 -x 3e9 --savehash normC20k20.kh *.pe.qc.fq.gz

#Apply digital normalization to the singled-end reads
diginorm_se.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/diginorm_se.time python ${KHMER}/scripts/normalize-by-median.py -k 20 -C 20 -N 4 -x 3e9 --loadhash normC20k20.kh --savehash normC20k20.kh *.se.qc.fq.gz

#trim off low-abundance parts of high-coverage reads
filter-adund.time:	
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/filter-adund.time ${KHMER}/scripts/filter-abund.py -V normC20k20.kh *.keep
	
#Clean up the files
diginorm_clean.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/diginorm_clean.time sh cleanup2.sh	

trinity_split.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/trinity_split.time sh split.sh

#Change -JM 15G based on machine memory
trinity.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/trinity.time /root/trinityrnaseq_r2013-02-25/Trinity.pl --left left.fq --right right.fq --seqType fq -JM 15G

khmer_part.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/khmer_part.time ${KHMER}/scripts/do-partition.py -x 1e9 -N 4 --threads 4 nema trinity-nematostella-raw.fa.gz
	
group.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/group.time python /usr/local/share/eel-pond/rename-with-partitions.py nema trinity-nematostella-raw.fa.gz.part
	mv trinity-nematostella-raw.fa.gz.part.renamed.fasta.gz trinity-nematostella.renamed.fa.gz

format_annotate.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/format_annotate.time sh format_annotate.sh
	
nema.x.mouse.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/nema.x.mouse.time blastall -i trinity-nematostella.renamed.fa -d mouse.protein.faa -e 1e-3 -p blastx -o nema.x.mouse -a 8 -v 4 -b 4

mouse.x.nema.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/mouse.x.nema.time blastall -i mouse.protein.faa -d trinity-nematostella.renamed.fa -e 1e-3 -p tblastn -o mouse.x.nema -a 8 -v 4 -b 4

#putative homology (best BLAST hit) 
nema.x.mouse.homol.time:
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/nema.x.mouse.homol.time python /usr/local/share/eel-pond/make-uni-best-hits.py nema.x.mouse nema.x.mouse.homol

nema.x.mouse.ortho.time:	
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/nema.x.mouse.ortho.time python /usr/local/share/eel-pond/make-reciprocal-best-hits.py nema.x.mouse mouse.x.nema nema.x.mouse.ortho

get_mouse_info.time:	
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/get_mouse_info.time sh get_mouse_info.sh

trinity-nematostella.renamed.fa.annot.time:	
	-echo 3 > /proc/sys/vm/drop_caches
	time -o ../time/trinity-nematostella.renamed.fa.annot.time python /usr/local/share/eel-pond/annotate-seqs.py trinity-nematostella.renamed.fa nema.x.mouse.ortho nema.x.mouse.homol
	mv trinity-nematostella.renamed.fa.annot nematostella.fa
